# ============================================================================
# PostgreSQL MCP Server - Environment Configuration
# ============================================================================
# Multi-Database Configuration Format
# Use DATABASES__<index>__<field> for multiple databases
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# First database: blog_small
DATABASES__0__NAME=blog_small
DATABASES__0__HOST=localhost
DATABASES__0__PORT=5432
DATABASES__0__DATABASE=blog_small
DATABASES__0__USER=postgres
DATABASES__0__PASSWORD=postgres
DATABASES__0__MIN_POOL_SIZE=5
DATABASES__0__MAX_POOL_SIZE=20
DATABASES__0__POOL_TIMEOUT=30
DATABASES__0__COMMAND_TIMEOUT=30

# Uncomment to add more databases:
# DATABASES__1__NAME=ecommerce_medium
# DATABASES__1__HOST=localhost
# DATABASES__1__PORT=5432
# DATABASES__1__DATABASE=ecommerce_medium
# DATABASES__1__USER=postgres
# DATABASES__1__PASSWORD=postgres

# ============================================================================
# OPENAI CONFIGURATION
# ============================================================================
OPENAI_API_KEY=your-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.0
OPENAI_TIMEOUT=30.0

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
SECURITY__ALLOW_WRITE_OPERATIONS=false
SECURITY__BLOCKED_TABLES=
SECURITY__BLOCKED_COLUMNS=
SECURITY__BLOCKED_FUNCTIONS=pg_sleep,pg_terminate_backend
SECURITY__ALLOW_EXPLAIN=false
SECURITY__MAX_ROWS=1000DATABASES__0_AX_EXECUTION_TIME=30.0

# ============================================================================
# VALIDATION CONFIGURATION
# ============================================================================
VALIDATION__ENABLED=true
VALIDATION__CONFIDENCE_THRESHOLD=70
VALIDATION__MAX_RETRIES=2
VALIDATION__TIMEOUT_SECONDS=10.0
VALIDATION__SAMPLE_ROWS=10
VALIDATION__MAX_QUESTION_LENGTH=5000

# ============================================================================
# OBSERVABILITY CONFIGURATION
# ============================================================================
OBSERVABILITY__LOG_LEVEL=INFO
OBSERVABILITY__LOG_FORMAT=json
OBSERVABILITY__METRICS_ENABLED=false
OBSERVABILITY__METRICS_PORT=9090
